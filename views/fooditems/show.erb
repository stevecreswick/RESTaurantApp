<h3><%= @fooditem.name %></h3>

<a href="/fooditems">All of them</a>
<a href="/fooditems/<%= @fooditem.id %>/edit">Edit</a>

<form action="/fooditems/<%= @fooditem.id %>" method="post">
  <input type="hidden" name="_method" value="delete">
  <input type="submit" value="No Longer Available">
</form>

<table class="bordered hoverable responsive-table">
        <thead>
          <tr>
              <th data-field="name">Name</th>
              <th data-field="spice_level">Spiciness</th>
              <th data-field="price">Price</th>
              <th data-field="description">Description</th>
          </tr>
        </thead>

        <tbody>
          <tr>
            <td><%= @fooditem.name %></td>
            <td><%= @fooditem.spice_level %></td>
            <td><%= @fooditem.price %></td>
            <td><%= @fooditem.description %></td>
          </tr>
        </tbody>
</table>

</div>
