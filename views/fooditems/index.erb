
<div class="container fooditems">

<h5 class="teal-text text-lighten-1">Menu Items</h5>

<div class="row">
    <div class="col s12">
      <ul class="tabs">
        <li class="tab col s3"><a href="#drinks">Drinks</a></li>
        <li class="tab col s3"><a href="#appetizers">Apps</a></li>
        <li class="tab col s3"><a class="active" href="#entrees">Entrees</a></li>
        <li class="tab col s3"><a href="#sides">Sides</a></li>
        <li class="tab col s3"><a href="#desserts">Desserts</a></li>
      </ul>
    </div>
  </div>

<div id="entrees">
<div class="row">
<% @entrees.each do |fooditem| %>
<% food_not_available = "" %>
<% if (fooditem.available == false) %>
  <% unavailable = "style='border: red 4px solid'"%>
<%end%>
    <div class="col s12 m6 l4">
      <div class="card-panel blue-grey darken-4" <%=unavailable%>>
        <div class="card-content grey-text text-lighten-3">
          <div class="row">
            <div class="col s6">
          <h5><%= fooditem.name %></h5>
        </div>
          <div class="col s4 offset-s1 right-align">
            <!-- Modal Triggers -->
            <a class="waves-effect waves-light btn modal-trigger" href="#modal<%=fooditem.id%>">Info</a>
          </div>

          <!-- Modals -->
          <div id="modal<%=fooditem.id%>" class="modal">
            <div class="modal-content">
              <h4 class="blue-grey-text text-darken-4"><%=fooditem.name%></h4>
              <h5  class="green-text text-accent-4"><%= ActiveSupport::NumberHelper.number_to_currency(fooditem.price)%></h5>
              <p  class="blue-grey-text text-darken-4"><%=fooditem.description%></p>
            </div>
            <div class="modal-footer">
              <a href="#!" class=" modal-action modal-close waves-effect waves-green btn-flat">Close</a>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

<% end %>
</div>
</div>


