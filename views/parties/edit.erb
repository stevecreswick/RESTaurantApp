<div class="container">

<h3>Edit a Party</h3>

<form action="/parties/<%= @party.id %>" method="post">
  <input type="hidden" name="_method" value="put">
  <input type="text" name="party[number_of_guests]" placeholder="Enter Number of Guests">
  <input type="text" name="party[restaurant_table_id]" value="<%= @party.restaurant_table_id %>" placeholder="Table Number">
  <input type="text" name="party[bill]" value="<%= @party.bill %>">
  <input type="text" name="party[paid_bill]" value="<%= @party.paid_bill %>">
  <input type="submit">
</form>

</div>
