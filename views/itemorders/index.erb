<div class="container">


<h3>Orders</h3>

<a href="/itemorders/new">New Order</a>



<table class="bordered responsive-table">
        <thead>
          <tr>
              <th data-field="Table#">Order ID</th>
              <th data-field="Table#">Party ID</th>
              <th data-field="Table#">Food Item Number</th>
              <th data-field="Table#">Food Item</th>
              <th data-field="Table#">Time Elapsed</th>

          </tr>
        </thead>

        <tbody>
          <% @itemorders.each do |itemorder| %>
          <% time_elapsed = ((Time.now - itemorder.created_at)/60).round %>

          <tr class="ordertime" data-time="<%=time_elapsed%>">
            <td><a href="/itemorders/<%= itemorder.id %>">
<%= itemorder.id %> </a></td>
            <td>
            <%= itemorder.party_id %></td>
            <td>
            <%= itemorder.fooditem_id %></td>
            <td>
              <%= itemorder.fooditem.name %>
            </td>
            <td>
              <%= ((Time.now - itemorder.created_at)/60).round %> min
            </td>
          </tr>

          <% end %>
        </tbody>
</table>

</div>
