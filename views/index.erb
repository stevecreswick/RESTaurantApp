<div class="container">
<h5 class="teal-text text-lighten-1 center-align">Select a Table</h5>
<div class="divider">

</div>
<div class="row">
    <div class="col s12">
      <ul class="tabs">
        <li class="tab col s3"><a href="#bar">Bar</a></li>
        <li class="tab col s3"><a class="active" href="#main_dining_room">Main</a></li>
        <li class="tab col s3"><a href="#outside">Outside</a></li>
      </ul>
    </div>

  </div>


<div id="main_dining_room">
  <div class="row">

<% @maintables.each do |table| %>

<% if (table.is_occupied == false) %>
<div class="col s4 m3 l3">
  <form action="/parties" method="post" class="<%=table.shape%> center-align">
    <input type="hidden" name="party[restaurant_table_id]" value ="<%= table.id %>">
    <input type="hidden" name="party[bill]" value=0>
    <input type="hidden" name="party[paid_bill]" value=false>
    <input type="hidden" name="restaurant_table[is_occupied]" value=true>
    <input type="hidden" name="table_id" value="<%= table.id %>">
    <input type="submit" value="<%= table.id %>" class="table-input">
    </form>
</div>

  <% elsif (table.is_occupied == true) %>
  <div class="col s4 m3 l3">

  <form action="/itemorders/new" method="get" class="<%=table.shape%> center-align occupied">
    <input type="submit" value="<%= table.id %>" class="table-input" >
    </form>
  </div>

  <%end%>
<% end %>
  </div>
</div>

  <div id="bar">
    <div class="row">

  <% @bartables.each do |table| %>

  <% if (table.is_occupied == false) %>
    <div class="col s4 m3 l3">

    <form action="/parties" method="post" class="<%=table.shape%> center-align">
      <input type="hidden" name="party[restaurant_table_id]" value ="<%= table.id %>">
      <input type="hidden" name="party[bill]" value=0>
      <input type="hidden" name="party[paid_bill]" value=false>
      <input type="hidden" name="restaurant_table[is_occupied]" value=true>
      <input type="hidden" name="table_id" value="<%= table.id %>">
      <input type="submit" value="<%= table.id %>" class="table-input">
      </form>
    </div>


    <% elsif (table.is_occupied == true) %>
    <div class="col s4 m3 l3">
    <form action="/itemorders/new" method="get" class="<%=table.shape%> center-align occupied">
      <input type="submit" value="<%= table.id %>" class="table-input" >
      </form>
    </div>
    <%end%>
  <% end %>
</div>
</div>


<div id="outside">
  <div class="row">
  <% @outsidetables.each do |table| %>

  <% if (table.is_occupied == false) %>
  <div class="col s4 m3 l3">
    <form action="/parties" method="post" class="<%=table.shape%> center-align">
      <input type="hidden" name="party[restaurant_table_id]" value ="<%= table.id %>">
      <input type="hidden" name="party[bill]" value=0>
      <input type="hidden" name="party[paid_bill]" value=false>
      <input type="hidden" name="restaurant_table[is_occupied]" value=true>
      <input type="hidden" name="table_id" value="<%= table.id %>">
      <input type="submit" value="<%= table.id %>" class="table-input">
      </form>
    </div>

    <div class="col s4 m3 l3">
    <% elsif (table.is_occupied == true) %>
    <form action="/itemorders/new" method="get" class="<%=table.shape%> center-align occupied">
      <input type="submit" value="<%= table.id %>" class="table-input" >
      </form>
    </div>
    <%end%>
  </div>
  <% end %>
</div>

</div>



</div>
